<h1>Product Details</h1>

<br/><br/>

<div class="jumbotron text-center">
  <!-- vinay code -->
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Product Name:</label>
    <div class="col-sm-1">
      <label class="form-control-static text-primary">{{model.productName}}</label>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-1 col-form-label">Product Description:</label>
