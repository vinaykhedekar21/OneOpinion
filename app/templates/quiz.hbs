<div>
  <h1>{{headerMessage}}</h1>
  <div class="container col-xs-12">

    <form class="well form-horizontal col-xs-12" action=" " method="post" id="contact_form">
      <fieldset>
        <!-- Form Name -->
        <legend>
          <center>
            <h2><b>Start creating your survey</b></h2></center>
        </legend><br>


        <div class="form-group">
          <label class="col-md-4 control-label">Question:</label>
          <div class="col-sm-8 inputGroupContainer">
            <div class="input-group col-sm-8">
              {{input type="text" value=question class="form-control" placeholder="Please type question here" autofocus="autofocus"}}
            </div>
          </div>
        </div>

        <div class="form-group">
          <label class="col-md-4 control-label">Option A:</label>
          <div class="col-md-8 inputGroupContainer">
            <div class="input-group col-sm-4">
              {{input type="text" value=optionA class="form-control" placeholder="Please enter Option A" autofocus="autofocus"}}
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-4 control-label">Option B:</label>
          <div class="col-md-8 inputGroupContainer">
            <div class="input-group col-sm-4">
              {{input type="text" value=optionB class="form-control" placeholder="Please enter Option B" autofocus="autofocus"}}
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-4 control-label">Option C:</label>
          <div class="col-md-8 inputGroupContainer">
            <div class="input-group col-sm-4">
              {{input type="text" value=optionC class="form-control" placeholder="Please enter Option C" autofocus="autofocus"}}
            </div>
          </div>
        </div>
        <!-- Button -->
        <div class="form-group">
          <label class="col-md-4 control-label"></label>
          <div class="col-md-8"><br>
            <button class="btn btn-danger" Style="width: 120px;" disabled= {{isDisabled}} {{action "addQuestion"}}>Add Question</button>
            <button class="btn btn-primary btn-sx" class="btn btn-primary" Style="width: 100px;" {{action "viewQuiz"}}>View Quiz</button>
            <a class="btn btn-danger" href="admin-page" role="button">Choose another product</a>
          </div>
        </div>

      </fieldset>
    </form>
  </div>
  {{#if responseMessage}}
    <div class="alert alert-success">{{responseMessage}}</div>
  {{/if}}
</div>
