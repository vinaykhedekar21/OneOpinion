<div class="jumbotron text-center" style="background-image: url(http://www.californiafootgolfclub.com/static/img/footgolf-1.jpg); background-size: 100%;">
  <h1>{{headerMessage}}</h1>
    <h2>Start creating your survey</h2>
  <br>
  <div class="form-horizontal form-group form-group-lg row">
    <div class="form-group row">
      <p class="col-sm-2 col-form-label">Question</p>
      <div class="col-sm-8">
        <!-- <input type="email" class="form-control" id="colFormLabel" placeholder="Please enter your question here"> -->
        {{input type="text" value=question class="form-control" placeholder="Please type question here" autofocus="autofocus"}}
      </div>
    </div>
  </div>
  <div class="form-group row">
    <p class="col-sm-2 col-form-label">Option A</p>
    <div class="col-sm-4">
      {{input type="text" value=optionA class="form-control" placeholder="Please enter Option A" autofocus="autofocus"}}
    </div>
  </div>

  <div class="form-group row">
    <p class="col-sm-2 col-form-label">Option B</p>
    <div class="col-sm-4">
      {{input type="text" value=optionB class="form-control" placeholder="Please enter Option B" autofocus="autofocus"}}
    </div>
  </div>

  <div class="form-group row">
    <p class="col-sm-2 col-form-label">Option C</p>
    <div class="col-sm-4">
      {{input type="text" value=optionC class="form-control" placeholder="Please enter Option C" autofocus="autofocus"}}
    </div>
  </div>
<br>
  <div class="row" align="center">
   <div class="col-sm-8">
      <button  class="btn btn-danger" Style="width: 120px;" disabled= {{isDisabled}} {{action "addQuestion"}}>Add Question</button>
      <button class="btn btn-primary btn-sx" class="btn btn-primary" Style="width: 100px;" {{action "viewQuiz"}}>View Quiz</button>
      <a class="btn btn-danger" href="admin-page" role="button">Choose another product</a>
      <!-- <button id="viewGraph" class="btn btn-danger" Style="width: 180px;"  href="admin-page">>Choose another product</a></button> -->
    </div>
  </div>
  {{#if responseMessage}}
    <div class="alert alert-success">{{responseMessage}}</div>
  {{/if}}

  <br/><br/>
</div>
